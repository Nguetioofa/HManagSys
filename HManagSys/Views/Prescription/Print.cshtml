@using HManagSys.Models.ViewModels.Patients
@model PrescriptionViewModel
@{
    ViewData["Title"] = "Imprimer Prescription";
    Layout = "_PrintLayout";
}

<div class="print-document prescription-document">
    <div class="print-header">
        <div class="hospital-info">
            <h2>@ViewBag.HospitalName</h2>
            <p>@ViewBag.HospitalAddress</p>
            <p>Tel: @ViewBag.HospitalPhone | Email: @ViewBag.HospitalEmail</p>
        </div>
        <div class="document-info">
            <h1>PRESCRIPTION MÉDICALE</h1>
            <p>N° @($"PRES-{Model.Id:D6}")</p>
            <p>@Model.FormattedDate</p>
        </div>
    </div>

    <div class="print-content">
        <div class="patient-doctor-info">
            <div class="patient-info">
                <h3>PATIENT</h3>
                <p><strong>@Model.PatientName</strong></p>
                <p>ID: @Model.PatientId</p>
            </div>
            <div class="doctor-info">
                <h3>MÉDECIN</h3>
                <p><strong>@Model.PrescribedByName</strong></p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.DiagnosisName))
        {
            <div class="diagnosis-info">
                <h3>DIAGNOSTIC</h3>
                <p>@Model.DiagnosisName</p>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Instructions))
        {
            <div class="instructions">
                <h3>INSTRUCTIONS GÉNÉRALES</h3>
                <div class="instruction-box">
                    <p>@Model.Instructions</p>
                </div>
            </div>
        }

        <div class="medications">
            <h3>MÉDICAMENTS PRESCRITS</h3>
            @if (Model.Items.Any())
            {
                <table class="medications-table">
                    <thead>
                        <tr>
                            <th>Médicament</th>
                            <th>Qté</th>
                            <th>Dosage</th>
                            <th>Fréquence</th>
                            <th>Instructions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.FormattedDosage</td>
                                <td>@item.FormattedFrequency</td>
                                <td>@item.FormattedInstructions</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="no-items"><em>Aucun médicament prescrit</em></p>
            }
        </div>

        <div class="legal-text">
            <p>Cette prescription est valable pour une durée d'un mois à compter de la date d'émission.</p>
        </div>

        <div class="signature">
            <p>Signature et cachet</p>
            <div class="signature-line"></div>
            <p>Dr. @Model.PrescribedByName</p>
        </div>
    </div>

    <div class="print-footer">
        <p>Document généré le @DateTime.Now.ToString("dd/MM/yyyy à HH:mm")</p>
        <p>@ViewBag.HospitalName - @ViewBag.HospitalAddress</p>
    </div>
</div>

@section Styles {
    <style>
        /* Styles spécifiques à l'impression */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .print-document {
            max-width: 210mm;
            margin: 0 auto;
            padding: 15mm 10mm;
        }

        .print-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 15px;
        }

        .hospital-info h2 {
            margin: 0 0 5px 0;
            color: #2c3e50;
        }

        .hospital-info p {
            margin: 2px 0;
            font-size: 11px;
        }

        .document-info {
            text-align: right;
        }

            .document-info h1 {
                margin: 0 0 10px 0;
                font-size: 18px;
                color: #2980b9;
            }

            .document-info p {
                margin: 2px 0;
                font-size: 12px;
            }

        .patient-doctor-info {
            display: flex;
            margin-bottom: 20px;
        }

        .patient-info, .doctor-info {
            flex: 1;
        }

        h3 {
            font-size: 14px;
            margin: 0 0 10px 0;
            color: #2980b9;
            border-bottom: 1px solid #eee;
            padding-bottom: 5px;
        }

        .diagnosis-info, .instructions {
            margin-bottom: 20px;
        }

        .instruction-box {
            background-color: #f9f9f9;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #eee;
        }

        .medications {
            margin-bottom: 30px;
        }

        .medications-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            .medications-table th, .medications-table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
                font-size: 11px;
            }

            .medications-table th {
                background-color: #f2f2f2;
            }

        .legal-text {
            font-size: 10px;
            color: #777;
            margin-bottom: 30px;
        }

        .signature {
            text-align: right;
            margin-top: 40px;
        }

        .signature-line {
            width: 150px;
            height: 1px;
            background-color: #999;
            margin: 30px 0 5px auto;
        }

        .print-footer {
            margin-top: 50px;
            padding-top: 10px;
            border-top: 1px solid #ddd;
            font-size: 9px;
            color: #777;
            text-align: center;
        }

        .no-items {
            font-style: italic;
            color: #777;
        }

        @@media print {
            body

        {
            margin: 0;
            padding: 0;
        }

        .print-document {
            margin: 0;
            padding: 0;
        }

        .no-print {
            display: none;
        }

        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-imprimer quand la page est chargée
            window.print();
        });
    </script>
}