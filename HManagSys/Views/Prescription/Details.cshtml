@using HManagSys.Models.ViewModels.Patients
@model PrescriptionViewModel
@{
    ViewData["Title"] = "Détails Prescription";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Prescriptions</a></li>
            <li class="breadcrumb-item active">Détails</li>
        </ol>
    </nav>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
        @if (Model.CanEdit)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-prescription-bottle-alt"></i> Prescription #@Model.Id
                </h5>
                <span class="@Model.StatusBadge">@Model.StatusText</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Patient</label>
                            <div>
                                <a asp-controller="Patient" asp-action="Details" asp-route-id="@Model.PatientId" class="fw-bold text-decoration-none">
                                    <i class="fas fa-user"></i> @Model.PatientName
                                </a>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Date de prescription</label>
                            <div class="fw-bold">@Model.FormattedDate</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Prescrit par</label>
                            <div class="fw-bold">@Model.PrescribedByName</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Centre hospitalier</label>
                            <div class="fw-bold">@Model.HospitalCenterName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @if (Model.DiagnosisId.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label text-muted">Diagnostic</label>
                                <div class="fw-bold">@Model.DiagnosisName</div>
                            </div>
                        }
                        @if (Model.CareEpisodeId.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label text-muted">Épisode de soins</label>
                                <div>
                                    <a asp-controller="CareEpisode" asp-action="Details" asp-route-id="@Model.CareEpisodeId" class="fw-bold text-decoration-none">
                                        <i class="fas fa-procedures"></i> Voir l'épisode
                                    </a>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Instructions))
                        {
                            <div class="mb-3">
                                <label class="form-label text-muted">Instructions générales</label>
                                <div class="p-3 bg-light rounded">@Model.Instructions</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-pills"></i> Produits prescrits (@Model.TotalItems)
                </h5>
            </div>
            <div class="card-body">
                @if (!Model.Items.Any())
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Aucun produit prescrit.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 30%">Produit</th>
                                    <th style="width: 10%">Quantité</th>
                                    <th style="width: 60%">Posologie et instructions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="fw-bold">@item.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(item.FullInstructions))
                                            {
                                                <div>@item.FullInstructions</div>
                                            }
                                            else
                                            {
                                                <ul class="mb-0 ps-3">
                                                    @if (!string.IsNullOrWhiteSpace(item.Dosage))
                                                    {
                                                        <li><span class="text-muted">Dosage:</span> @item.Dosage</li>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(item.Frequency))
                                                    {
                                                        <li><span class="text-muted">Fréquence:</span> @item.Frequency</li>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(item.Duration))
                                                    {
                                                        <li><span class="text-muted">Durée:</span> @item.Duration</li>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(item.Instructions))
                                                    {
                                                        <li><span class="text-muted">Instructions:</span> @item.Instructions</li>
                                                    }
                                                </ul>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            @if (Model.CanDispense)
            {
                <div class="card-footer d-flex justify-content-end">
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#dispenseModal">
                        <i class="fas fa-check-circle"></i> Marquer comme dispensée
                    </button>
                </div>
            }
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-print"></i> Impression et partage
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" onclick="window.print()">
                        <i class="fas fa-print"></i> Imprimer
                    </button>
                    <button class="btn btn-outline-primary" id="btnExportPdf">
                        <i class="fas fa-file-pdf"></i> Exporter en PDF
                    </button>
                    <button class="btn btn-outline-primary" id="btnShareEmail">
                        <i class="fas fa-envelope"></i> Envoyer par email
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de dispensation -->
@if (Model.CanDispense)
{
    <div class="modal fade" id="dispenseModal" tabindex="-1" aria-labelledby="dispenseModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="dispenseModalLabel">Confirmer la dispensation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info mb-3">
                        <i class="fas fa-info-circle"></i> Vous êtes sur le point de marquer cette prescription comme dispensée.
                    </div>
                    <p>Veuillez confirmer que tous les produits suivants ont été dispensés au patient :</p>
                    <ul>
                        @foreach (var item in Model.Items)
                        {
                            <li><strong>@item.ProductName</strong> - Quantité: @item.Quantity</li>
                        }
                    </ul>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="confirmDispense" required>
                        <label class="form-check-label" for="confirmDispense">
                            Je confirme avoir dispensé tous les produits prescrits au patient
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form asp-action="Dispense" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" id="btnConfirmDispense" class="btn btn-success" disabled>
                            <i class="fas fa-check-circle"></i> Confirmer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Gestion de la confirmation de dispensation
            $("#confirmDispense").change(function() {
                $("#btnConfirmDispense").prop("disabled", !this.checked);
            });

            // Gestion des boutons d'export et partage
            $("#btnExportPdf").click(function() {
                // Cette fonction serait implémentée pour générer un PDF
                alert("Fonctionnalité d'export PDF à implémenter");
            });

            $("#btnShareEmail").click(function() {
                // Cette fonction serait implémentée pour l'envoi par email
                alert("Fonctionnalité d'envoi par email à implémenter");
            });
        });
    </script>
}