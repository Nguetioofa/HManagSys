@model HManagSys.Models.ViewModels.Stock.CreateProductCategoryViewModel
@{
    ViewData["Title"] = "Nouvelle Catégorie";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">
                    <i class="fas fa-tags"></i>
                    Catégories
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Nouvelle catégorie</li>
        </ol>
    </nav>

    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">
                        <i class="fas fa-plus-circle text-success"></i>
                        Nouvelle Catégorie de Produits
                    </h1>
                    <p class="text-muted mb-0">Créer une nouvelle catégorie pour organiser vos produits</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i>
                        Informations de la catégorie
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" novalidate>

                        <!-- Nom de la catégorie -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label required">
                                <i class="fas fa-tag text-primary"></i>
                                Nom de la catégorie
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg"
                                   placeholder="Ex: Médicaments, Consommables, Équipements..."
                                   maxlength="100">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle text-info"></i>
                                Le nom doit être unique et descriptif (max 100 caractères)
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left text-secondary"></i>
                                Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Description détaillée de la catégorie (optionnel)..."
                                      maxlength="500"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle text-info"></i>
                                Description optionnelle pour clarifier l'usage de cette catégorie (max 500 caractères)
                            </div>
                        </div>

                        <!-- Statut -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" id="isActiveSwitch">
                                <label asp-for="IsActive" class="form-check-label" for="isActiveSwitch">
                                    <i id="statusIcon" class="fas fa-check-circle text-success"></i>
                                    <span id="statusText">Catégorie active</span>
                                </label>
                            </div>
                            <div class="form-text">
                                <i class="fas fa-info-circle text-info"></i>
                                Seules les catégories actives seront disponibles lors de la création de produits
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-times"></i>
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i>
                                Créer la catégorie
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Aide contextuelle -->
    <div class="row mt-4">
        <div class="col-lg-8 col-xl-6 mx-auto">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-lightbulb text-warning"></i>
                        Conseils pour créer une catégorie
                    </h6>
                    <ul class="mb-0 small">
                        <li><strong>Nom clair :</strong> Choisissez un nom descriptif et facile à comprendre</li>
                        <li><strong>Unicité :</strong> Assurez-vous que le nom n'existe pas déjà</li>
                        <li><strong>Organisation :</strong> Pensez à la logique d'organisation de vos produits</li>
                        <li><strong>Description :</strong> Ajoutez une description si le nom n'est pas suffisamment explicite</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Validation côté client *@
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Gestion du switch actif/inactif avec feedback visuel
        document.getElementById('isActiveSwitch').addEventListener('change', function() {
            const statusIcon = document.getElementById('statusIcon');
            const statusText = document.getElementById('statusText');

            if (this.checked) {
                statusIcon.className = 'fas fa-check-circle text-success';
                statusText.textContent = 'Catégorie active';
                statusText.className = 'text-success';
            } else {
                statusIcon.className = 'fas fa-pause-circle text-warning';
                statusText.textContent = 'Catégorie inactive';
                statusText.className = 'text-warning';
            }
        });

        // Validation en temps réel du nom
        document.getElementById('Name').addEventListener('blur', function() {
            const value = this.value.trim();
            if (value.length > 0 && value.length < 3) {
                this.classList.add('is-invalid');
                const feedback = this.parentNode.querySelector('.invalid-feedback') ||
                               this.parentNode.querySelector('.text-danger');
                if (feedback) {
                    feedback.textContent = 'Le nom doit contenir au moins 3 caractères';
                }
            } else {
                this.classList.remove('is-invalid');
            }
        });

        // Auto-resize du textarea
        const textarea = document.querySelector('textarea');
        textarea.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = this.scrollHeight + 'px';
        });

        // Compteur de caractères pour la description
        const descriptionField = document.getElementById('Description');
        const maxLength = 500;

        // Créer le compteur
        const counter = document.createElement('div');
        counter.className = 'text-muted small text-end mt-1';
        counter.style.fontSize = '0.875em';
        descriptionField.parentNode.appendChild(counter);

        function updateCounter() {
            const remaining = maxLength - descriptionField.value.length;
            counter.textContent = `${descriptionField.value.length}/${maxLength} caractères`;

            if (remaining < 50) {
                counter.classList.add('text-warning');
                counter.classList.remove('text-muted');
            } else {
                counter.classList.add('text-muted');
                counter.classList.remove('text-warning');
            }
        }

        descriptionField.addEventListener('input', updateCounter);
        updateCounter(); // Initial call
    </script>
}

@section Styles {
    <style>
        .required::after {
            content: '*';
            color: #dc3545;
            margin-left: 4px;
        }

        .form-control-lg {
            font-size: 1.125rem;
            padding: 0.75rem 1rem;
        }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
        }

        .card-header.bg-success {
            background-color: #198754 !important;
        }

        .form-check-label {
            font-weight: 500;
        }

        .form-text {
            margin-top: 0.5rem;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: var(--bs-breadcrumb-divider, ">");
        }

        /* Animation pour les transitions de couleur */
        .form-check-label span {
            transition: color 0.3s ease;
        }

        .card {
            border: none;
            border-radius: 0.75rem;
        }

        .card-header {
            border-radius: 0.75rem 0.75rem 0 0 !important;
        }

        /* Style pour la validation */
        .form-control.is-invalid {
            border-color: #dc3545;
            padding-right: calc(1.5em + 0.75rem);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath d='m5.8 3.6.7.7-1.4 1.4 1.4 1.4-.7.7L4.4 6l1.4-1.4z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
    </style>
}