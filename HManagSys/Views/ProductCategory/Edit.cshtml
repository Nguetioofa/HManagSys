@model HManagSys.Models.ViewModels.Stock.EditProductCategoryViewModel
@{
    ViewData["Title"] = "Modifier Catégorie";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">
                    <i class="fas fa-tags"></i>
                    Catégories
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Modifier @Model.Name</li>
        </ol>
    </nav>

    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">
                        <i class="fas fa-edit text-warning"></i>
                        Modifier la Catégorie
                    </h1>
                    <p class="text-muted mb-0">
                        Modification de « <strong>@Model.Name</strong> »
                        @if (Model.ProductCount > 0)
                        {
                            <span class="badge bg-info ms-2">@Model.ProductCount produit(s) associé(s)</span>
                        }
                    </p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertes d'information -->
    @if (Model.ProductCount > 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            <strong>Information :</strong> Cette catégorie contient @Model.ProductCount produit(s).
            Toute modification sera appliquée à tous les produits associés.
        </div>
    }

    <!-- Formulaire -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-pencil-alt"></i>
                        Informations de la catégorie
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" novalidate>
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="ProductCount" type="hidden" />

                        <!-- Nom de la catégorie -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label required">
                                <i class="fas fa-tag text-primary"></i>
                                Nom de la catégorie
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg"
                                   placeholder="Ex: Médicaments, Consommables, Équipements..."
                                   maxlength="100">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle text-info"></i>
                                Le nom doit être unique et descriptif (max 100 caractères)
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left text-secondary"></i>
                                Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Description détaillée de la catégorie (optionnel)..."
                                      maxlength="500"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle text-info"></i>
                                Description optionnelle pour clarifier l'usage de cette catégorie (max 500 caractères)
                            </div>
                        </div>

                        <!-- Statut -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" id="isActiveSwitch">
                                <label asp-for="IsActive" class="form-check-label" for="isActiveSwitch">
                                    <i id="statusIcon" class="fas fa-check-circle text-success"></i>
                                    <span id="statusText">Catégorie active</span>
                                </label>
                            </div>
                            <div class="form-text">
                                <i class="fas fa-info-circle text-info"></i>
                                Seules les catégories actives seront disponibles lors de la création de produits
                            </div>
                            @if (Model.ProductCount > 0 && Model.IsActive)
                            {
                                <div class="form-text text-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    Attention : Désactiver cette catégorie affectera la visibilité des produits associés
                                </div>
                            }
                        </div>

                        <!-- Actions -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-times"></i>
                                Annuler
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info me-md-2">
                                <i class="fas fa-eye"></i>
                                Voir détails
                            </a>
                            <button type="submit" class="btn btn-warning text-dark">
                                <i class="fas fa-save"></i>
                                Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Informations supplémentaires -->
    <div class="row mt-4">
        <div class="col-lg-8 col-xl-6 mx-auto">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-info-circle text-info"></i>
                        Informations sur cette catégorie
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <strong>Produits associés :</strong><br>
                                <span class="badge bg-primary">@Model.ProductCount</span> produit(s)
                            </small>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">
                                <strong>Dernière modification :</strong><br>
                                @if (ViewBag.CurrentUser != null)
                                {
                                    <text>@DateTime.Now.ToString("dd/MM/yyyy à HH:mm")</text>
                                }
                                else
                                {
                                    <text>Non modifiée</text>
                                }
                            </small>
                        </div>
                    </div>

                    @if (Model.ProductCount > 0)
                    {
                        <hr class="my-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <small class="text-muted">
                                <i class="fas fa-boxes text-secondary"></i>
                                Voulez-vous voir les produits de cette catégorie ?
                            </small>
                            <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@Model.Id"
                               class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-list"></i>
                                Voir les produits
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Validation côté client *@
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Gestion du switch actif/inactif avec feedback visuel
        function updateStatusDisplay() {
            const isActiveSwitch = document.getElementById('isActiveSwitch');
            const statusIcon = document.getElementById('statusIcon');
            const statusText = document.getElementById('statusText');

            if (isActiveSwitch.checked) {
                statusIcon.className = 'fas fa-check-circle text-success';
                statusText.textContent = 'Catégorie active';
                statusText.className = 'text-success';
            } else {
                statusIcon.className = 'fas fa-pause-circle text-warning';
                statusText.textContent = 'Catégorie inactive';
                statusText.className = 'text-warning';
            }
        }

        // Initialiser l'affichage au chargement
        updateStatusDisplay();

        // Écouter les changements
        document.getElementById('isActiveSwitch').addEventListener('change', function() {
            updateStatusDisplay();

            // Avertissement si désactivation avec produits associés
            const productCount = @Model.ProductCount;
            if (!this.checked && productCount > 0) {
                if (!confirm(`Attention : Désactiver cette catégorie affectera ${productCount} produit(s) associé(s).\n\nContinuer ?`)) {
                    this.checked = true;
                    updateStatusDisplay();
                }
            }
        });

        // Validation en temps réel du nom
        document.getElementById('Name').addEventListener('blur', function() {
            const value = this.value.trim();
            if (value.length > 0 && value.length < 3) {
                this.classList.add('is-invalid');
            } else {
                this.classList.remove('is-invalid');
            }
        });

        // Auto-resize du textarea
        const textarea = document.querySelector('textarea');
        textarea.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = this.scrollHeight + 'px';
        });

        // Compteur de caractères pour la description
        const descriptionField = document.getElementById('Description');
        const maxLength = 500;

        // Créer le compteur
        const counter = document.createElement('div');
        counter.className = 'text-muted small text-end mt-1';
        counter.style.fontSize = '0.875em';
        descriptionField.parentNode.appendChild(counter);

        function updateCounter() {
            const remaining = maxLength - descriptionField.value.length;
            counter.textContent = `${descriptionField.value.length}/${maxLength} caractères`;

            if (remaining < 50) {
                counter.classList.add('text-warning');
                counter.classList.remove('text-muted');
            } else {
                counter.classList.add('text-muted');
                counter.classList.remove('text-warning');
            }
        }

        descriptionField.addEventListener('input', updateCounter);
        updateCounter(); // Initial call

        // Confirmation avant soumission si changements importants
        document.querySelector('form').addEventListener('submit', function(e) {
            const productCount = @Model.ProductCount;
            const isActiveSwitch = document.getElementById('isActiveSwitch');

            // Si on désactive une catégorie avec des produits
            if (!isActiveSwitch.checked && productCount > 0 && @Model.IsActive.ToString().ToLower()) {
                if (!confirm(`Vous êtes sur le point de désactiver une catégorie contenant ${productCount} produit(s).\n\nCette action peut affecter la disponibilité de ces produits.\n\nConfirmer la modification ?`)) {
                    e.preventDefault();
                    return false;
                }
            }
        });
    </script>
}

@section Styles {
    <style>
        .required::after {
            content: '*';
            color: #dc3545;
            margin-left: 4px;
        }

        .form-control-lg {
            font-size: 1.125rem;
            padding: 0.75rem 1rem;
        }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
        }

        .card-header.bg-warning {
            background-color: #ffc107 !important;
            color: #000 !important;
        }

        .form-check-label {
            font-weight: 500;
        }

        .form-text {
            margin-top: 0.5rem;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: var(--bs-breadcrumb-divider, ">");
        }

        /* Animation pour les transitions de couleur */
        .form-check-label span {
            transition: color 0.3s ease;
        }

        .card {
            border: none;
            border-radius: 0.75rem;
        }

        .card-header {
            border-radius: 0.75rem 0.75rem 0 0 !important;
        }

        /* Style pour la validation */
        .form-control.is-invalid {
            border-color: #dc3545;
            padding-right: calc(1.5em + 0.75rem);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath d='m5.8 3.6.7.7-1.4 1.4 1.4 1.4-.7.7L4.4 6l1.4-1.4z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }

        /* Mise en évidence des changements importants */
        .alert {
            border-left: 4px solid;
        }

        .alert-info {
            border-left-color: #0dcaf0;
        }

        .alert-warning {
            border-left-color: #ffc107;
        }
    </style>
}