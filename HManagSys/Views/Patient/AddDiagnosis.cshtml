@using HManagSys.Models.ViewModels.Patients
@model CreateDiagnosisViewModel
@{
    ViewData["Title"] = "Ajouter un diagnostic";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Patient" asp-action="Index">Patients</a></li>
            <li class="breadcrumb-item"><a asp-controller="Patient" asp-action="Details" asp-route-id="@Model.PatientId">@Model.PatientName</a></li>
            <li class="breadcrumb-item active">Ajouter un diagnostic</li>
        </ol>
    </nav>
    <div>
        <a asp-controller="Patient" asp-action="Details" asp-route-id="@Model.PatientId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-stethoscope"></i> Nouveau diagnostic pour @Model.PatientName
                </h5>
            </div>
            <div class="card-body">
                <form asp-controller="Patient" asp-action="AddDiagnosis" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="PatientId" />
                    <input type="hidden" asp-for="PatientName" />
                    <input type="hidden" asp-for="HospitalCenterId" />
                    <input type="hidden" asp-for="IsActive" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DiagnosisName" class="form-label"></label>
                                <input asp-for="DiagnosisName" class="form-control" required />
                                <span asp-validation-for="DiagnosisName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DiagnosisCode" class="form-label"></label>
                                <input asp-for="DiagnosisCode" class="form-control" placeholder="Ex: J45.0 (Asthme)" />
                                <span asp-validation-for="DiagnosisCode" class="text-danger"></span>
                                <small class="text-muted">Optionnel - Code CIM-10 ou autre classification</small>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DiagnosisDate" class="form-label"></label>
                                <input asp-for="DiagnosisDate" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="DiagnosisDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Severity" class="form-label"></label>
                                <select asp-for="Severity" class="form-select">
                                    <option value="">-- Sélectionner une sévérité --</option>
                                    @foreach (var option in Model.SeverityOptions)
                                    {
                                        <option value="@option.Value">@option.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Severity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description détaillée du diagnostic, observations et symptômes..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-controller="Patient" asp-action="Details" asp-route-id="@Model.PatientId" class="btn btn-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer le diagnostic
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Définir la date/heure actuelle sur le champ de date
            const now = new Date();
            const localISOTime = new Date(now.getTime() - now.getTimezoneOffset() * 60000).toISOString().slice(0, 16);
            $("#DiagnosisDate").val(localISOTime);
        });
    </script>
}