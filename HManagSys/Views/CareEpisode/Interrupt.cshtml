@using HManagSys.Models.ViewModels.Patients
@model InterruptCareEpisodeViewModel

@{
    ViewData["Title"] = "Interrompre l'épisode de soins";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-times-circle"></i> Interrompre l'épisode de soins
    </h1>
    <div>
        <a asp-action="Details" asp-route-id="@Model.CareEpisodeId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour aux détails
        </a>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Patient: @Model.PatientName</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Attention!</strong> L'interruption d'un épisode de soins est définitive et ne peut pas être annulée.
        </div>

        <form asp-action="Interrupt" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="CareEpisodeId" />

            <div class="form-group mb-3">
                <label asp-for="InterruptionDate" class="form-label">Date d'interruption</label>
                <input asp-for="InterruptionDate" class="form-control" type="datetime-local" required />
                <span asp-validation-for="InterruptionDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="InterruptionReason" class="form-label">Raison de l'interruption <span class="text-danger">*</span></label>
                <textarea asp-for="InterruptionReason" class="form-control" rows="4" required></textarea>
                <span asp-validation-for="InterruptionReason" class="text-danger"></span>
                <small class="form-text text-muted">
                    Veuillez fournir une raison détaillée pour l'interruption de cet épisode de soins.
                </small>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-action="Details" asp-route-id="@Model.CareEpisodeId" class="btn btn-secondary mr-2">Annuler</a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-times-circle"></i> Interrompre l'épisode
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Initialiser la date et l'heure d'interruption à maintenant
            const now = new Date();
            const localDatetime = now.toISOString().slice(0, 16);
            $('#InterruptionDate').val(localDatetime);
        });
    </script>
}