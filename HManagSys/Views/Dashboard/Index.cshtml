@using HManagSys.Models.ViewModels
@model DashboardViewModel
@{
    ViewData["Title"] = "Tableau de bord";
}

<div class="container-fluid">
    <!-- En-tête de bienvenue -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-1">@Model.WelcomeMessage</h1>
                            <p class="mb-0">
                                <i class="fas fa-hospital"></i>
                                @Model.Center.Name
                                <span class="ms-3">
                                    <i class="fas fa-user-tag"></i>
                                    @Model.CurrentRole
                                </span>
                            </p>
                        </div>
                        <div class="col-md-4 text-end d-none d-md-block">
                            <i class="fas fa-tachometer-alt fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <p class="text-white-50 small mb-1">Patients aujourd'hui</p>
                            <h4 class="mb-0">24</h4>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <p class="text-white-50 small mb-1">Ventes du jour</p>
                            <h4 class="mb-0">125,000 FCFA</h4>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-cash-register fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <p class="text-white-50 small mb-1">Alertes stock</p>
                            <h4 class="mb-0">8</h4>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-purple text-white h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <p class="text-white-50 small mb-1">Examens en attente</p>
                            <h4 class="mb-0">12</h4>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-x-ray fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Actions rapides -->
        <div class="col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt text-primary"></i>
                        Actions rapides
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fas fa-user-plus"></i>
                            Nouveau Patient
                        </a>
                        <a href="#" class="btn btn-outline-success">
                            <i class="fas fa-cash-register"></i>
                            Nouvelle Vente
                        </a>
                        <a href="#" class="btn btn-outline-info">
                            <i class="fas fa-prescription"></i>
                            Créer Prescription
                        </a>
                        <a href="#" class="btn btn-outline-warning">
                            <i class="fas fa-x-ray"></i>
                            Demander Examen
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activités récentes -->
        <div class="col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history text-success"></i>
                        Activités récentes
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Heure</th>
                                    <th>Action</th>
                                    <th>Patient</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>14:30</td>
                                    <td><i class="fas fa-stethoscope text-primary"></i> Consultation</td>
                                    <td>NDOMO Martin</td>
                                    <td><span class="badge bg-success">Terminé</span></td>
                                </tr>
                                <tr>
                                    <td>14:15</td>
                                    <td><i class="fas fa-pills text-warning"></i> Prescription</td>
                                    <td>FOTSO Marie</td>
                                    <td><span class="badge bg-info">En cours</span></td>
                                </tr>
                                <tr>
                                    <td>14:00</td>
                                    <td><i class="fas fa-cash-register text-success"></i> Vente</td>
                                    <td>BIKON Jean</td>
                                    <td><span class="badge bg-success">Payé</span></td>
                                </tr>
                                <tr>
                                    <td>13:45</td>
                                    <td><i class="fas fa-x-ray text-info"></i> Examen Radio</td>
                                    <td>KEMALA Sophie</td>
                                    <td><span class="badge bg-warning">Planifié</span></td>
                                </tr>
                                <tr>
                                    <td>13:30</td>
                                    <td><i class="fas fa-user-plus text-primary"></i> Nouveau patient</td>
                                    <td>NGONO Paul</td>
                                    <td><span class="badge bg-success">Enregistré</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Graphiques et informations supplémentaires -->
    <div class="row">
        <!-- Alertes stock -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle text-warning"></i>
                        Alertes de stock
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 mb-2">
                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                <span>Paracétamol 500mg</span>
                                <span class="badge bg-danger">5 unités</span>
                            </div>
                        </div>
                        <div class="col-12 mb-2">
                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                <span>Seringues 10ml</span>
                                <span class="badge bg-warning">12 unités</span>
                            </div>
                        </div>
                        <div class="col-12 mb-2">
                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                <span>Gants latex (boîte)</span>
                                <span class="badge bg-warning">3 unités</span>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="#" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye"></i>
                            Voir tous les stocks
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rendez-vous à venir -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-alt text-info"></i>
                        Plannification du jour
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">15:00 - Consultation</h6>
                                <p class="timeline-description">MBALLA Pierre - Contrôle tension</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">15:30 - Examen</h6>
                                <p class="timeline-description">ESSONO Marie - Radiographie</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">16:00 - Suivi</h6>
                                <p class="timeline-description">OLOMO Jean - Post-opératoire</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-purple {
            background-color: #6f42c1 !important;
        }

        .opacity-50 {
            opacity: 0.5;
        }

        .opacity-75 {
            opacity: 0.75;
        }

        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 20px;
        }

            .timeline-item:not(:last-child)::before {
                content: '';
                position: absolute;
                left: -22px;
                top: 20px;
                width: 2px;
                height: 100%;
                background-color: #e9ecef;
            }

        .timeline-marker {
            position: absolute;
            left: -30px;
            top: 0;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            border: 3px solid white;
            box-shadow: 0 0 0 3px #e9ecef;
        }

        .timeline-title {
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .timeline-description {
            font-size: 0.85rem;
            color: #6c757d;
            margin-bottom: 0;
        }

        .card-body .btn {
            transition: all 0.3s ease;
        }

            .card-body .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

        .table-hover tbody tr:hover {
            background-color: rgba(0,123,255,0.1);
        }
    </style>
}