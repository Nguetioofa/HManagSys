@using HManagSys.Models.ViewModels.Patients
@model ScheduleExaminationViewModel
@{
    ViewData["Title"] = "Planifier un examen";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Examens</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.ExaminationId">Détails</a></li>
            <li class="breadcrumb-item active">Planifier</li>
        </ol>
    </nav>
    <div>
        <a asp-action="Details" asp-route-id="@Model.ExaminationId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-calendar-alt"></i> Planifier l'examen @Model.ExaminationTypeName pour @Model.PatientName
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Schedule" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="ExaminationId" />
                    <input type="hidden" asp-for="PatientName" />
                    <input type="hidden" asp-for="ExaminationTypeName" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ScheduledDate" class="form-label">Date planifiée</label>
                                <input asp-for="ScheduledDate" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="ScheduledDate" class="text-danger"></span>
                                <small class="text-muted">Veuillez sélectionner la date et l'heure prévues pour l'examen</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PerformedBy" class="form-label">Exécutant</label>
                                <select asp-for="PerformedBy" class="form-select" required>
                                    <option value="">-- Sélectionner un exécutant --</option>
                                    @foreach (var option in Model.PerformedByOptions)
                                    {
                                        <option value="@option.Value">@option.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="PerformedBy" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                        <small class="text-muted">Instructions spéciales ou informations supplémentaires pour l'examen</small>
                    </div>

                    <div class="alert alert-info mb-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-info-circle fa-2x me-3"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="alert-heading mb-1">Informations importantes</h6>
                                <p class="mb-0">
                                    La planification de cet examen mettra à jour son statut de "Demandé" à "Planifié".
                                    Un personnel qualifié devra ensuite enregistrer les résultats une fois l'examen effectué.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Details" asp-route-id="@Model.ExaminationId" class="btn btn-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-calendar-check"></i> Confirmer la planification
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Définir la date/heure par défaut (demain à 10h00)
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            tomorrow.setHours(10, 0, 0, 0);
            const localISOTime = new Date(tomorrow.getTime() - tomorrow.getTimezoneOffset() * 60000).toISOString().slice(0, 16);
            $("#ScheduledDate").val(localISOTime);
        });
    </script>
}