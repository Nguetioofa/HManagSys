@using HManagSys.Models.ViewModels.Patients
@model CreateExaminationViewModel
@{
    ViewData["Title"] = "Nouvel Examen";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Examens</a></li>
            <li class="breadcrumb-item active">Demande d'examen</li>
        </ol>
    </nav>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-microscope"></i> Nouvelle demande d'examen pour @Model.PatientName
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="PatientId" />
                    <input type="hidden" asp-for="PatientName" />
                    <input type="hidden" asp-for="HospitalCenterId" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ExaminationTypeId" class="form-label">Type d'examen</label>
                                <select asp-for="ExaminationTypeId" class="form-select" required>
                                    <option value="">-- Sélectionner un type d'examen --</option>
                                    @foreach (var option in Model.ExaminationTypeOptions)
                                    {
                                        <option value="@option.Value">@option.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="ExaminationTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RequestDate" class="form-label">Date de demande</label>
                                <input asp-for="RequestDate" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="RequestDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CareEpisodeId" class="form-label">Épisode de soins</label>
                                <select asp-for="CareEpisodeId" class="form-select">
                                    <option value="">-- Aucun épisode de soins --</option>
                                    @foreach (var option in Model.CareEpisodeOptions)
                                    {
                                        <option value="@option.Value">@option.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="CareEpisodeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ScheduledDate" class="form-label">Date planifiée (optionnelle)</label>
                                <input asp-for="ScheduledDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="ScheduledDate" class="text-danger"></span>
                                <small class="text-muted">Laissez vide pour planifier ultérieurement</small>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FinalPrice" class="form-label">Prix</label>
                                <div class="input-group">
                                    <input asp-for="FinalPrice" class="form-control" type="number" min="0" required />
                                    <span class="input-group-text">FCFA</span>
                                </div>
                                <span asp-validation-for="FinalPrice" class="text-danger"></span>
                                <small class="text-muted">Le prix sera automatiquement défini selon le type d'examen</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DiscountAmount" class="form-label">Remise</label>
                                <div class="input-group">
                                    <input asp-for="DiscountAmount" class="form-control" type="number" min="0" value="0" />
                                    <span class="input-group-text">FCFA</span>
                                </div>
                                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer la demande
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Définir la date/heure actuelle sur le champ de date
            const now = new Date();
            const localISOTime = new Date(now.getTime() - now.getTimezoneOffset() * 60000).toISOString().slice(0, 16);
            $("#RequestDate").val(localISOTime);

            // Mise à jour du prix en fonction du type d'examen
            $("#ExaminationTypeId").change(function() {
                const examinationTypeId = $(this).val();
                if (examinationTypeId) {
                    // Ici vous pourriez faire un appel AJAX pour récupérer le prix du type d'examen
                    // Pour l'exemple, on utilise un prix fixe
                    $("#FinalPrice").val(5000);
                } else {
                    $("#FinalPrice").val(0);
                }
            });
        });
    </script>
}