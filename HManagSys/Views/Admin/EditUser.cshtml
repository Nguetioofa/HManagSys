@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Gestion des checkboxes de centres
            $('.center-checkbox').change(function() {
                const isChecked = $(this).is(':checked');
                const roleSelection = $(this).closest('.center-assignment-card').find('.role-selection');
                const currentRoleBadge = $(this).closest('.center-assignment-card').find('.current-role-badge');
                
                if (isChecked) {
                    roleSelection.slideDown();
                    currentRoleBadge.show();
                } else {
                    roleSelection.slideUp();
                    currentRoleBadge.hide();
                }
            });

            // Mise à jour du statut du compte
            $('#IsActive').change(function() {
                const isActive = $(this).is(':checked');
                const label = $('#statusLabel');
                
                if (isActive) {
                    label.text('Compte actif').removeClass('text-danger').addClass('text-success');
                } else {
                    label.text('Compte désactivé').removeClass('text-success').addClass('text-danger');
                }
            });

            // Validation côté client pour s'assurer qu'au moins un centre est sélectionné
            $('#editUserForm').submit(function(e) {
                const selectedCenters = $('.center-checkbox:checked').length;
                
                if (selectedCenters === 0) {
                    e.preventDefault();
                    alert('L\'utilisateur doit être affecté à au moins un centre hospitalier.');
                    return false;
                }

                // Confirmation si désactivation du compte
                const isActive = $('#IsActive').is(':checked');
                if (!isActive && !confirm('Êtes-vous sûr de vouloir désactiver ce compte ? L\'utilisateur ne pourra plus se connecter.')) {
                    e.preventDefault();
                    return false;
                }

                // Afficher un indicateur de chargement
                const submitBtn = $('#submitBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin"></i> Enregistrement en cours...');
                
                return true;
            });

            // Mise à jour des badges de rôle en temps réel
            $('select[name*="RoleType"]').change(function() {
                const selectedRole = $(this).val();
                const badge = $(this).closest('.role-selection').find('.current-role-badge .badge');
                const roleDisplay = selectedRole === 'SuperAdmin' ? 'Super Administrateur' : 'Personnel Soignant';
                const badgeClass = selectedRole === 'SuperAdmin' ? 'bg-danger' : 'bg-primary';
                
                badge.removeClass('bg-danger bg-primary').addClass(badgeClass);
                badge.text('Rôle actuel: ' + roleDisplay);
            });

            // Validation en temps réel des champs requis
            $('input[required], select[required]').on('blur', function() {
                const $this = $(this);
                const $formGroup = $this.closest('.mb-3');
                const $feedback = $formGroup.find('.invalid-feedback');
                
                if ($this.val() === '') {
                    $this.addClass('is-invalid');
                    if ($feedback.length === 0) {
                        $this.after('<div class="invalid-feedback">Ce champ est requis.</div>');
                    }
                } else {
                    $this.removeClass('is-invalid');
                    $feedback.remove();
                }
            });

            // Formatage du numéro de téléphone
            $('#PhoneNumber').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.startsWith('237')) {
                    value = '+' + value;
                } else if (value.startsWith('6') || value.startsWith('2')) {
                    value = '+237' + value;
                }
                $(this).val(value);
            });

            // Animation des cartes d'affectation au clic
            $('.center-assignment-card').click(function(e) {
                if (e.target.type !== 'checkbox' && e.target.tagName !== 'SELECT') {
                    const checkbox = $(this).find('.center-checkbox');
                    checkbox.prop('checked', !checkbox.prop('checked')).trigger('change');
                }
            });

            // Effet hover sur les cartes
            $('.center-assignment-card').hover(
                function() {
                    $(this).addClass('border-primary');
                },
                function() {
                    $(this).removeClass('border-primary');
                }
            );

            // Alerte si modification d'email
            $('#Email').on('change', function() {
                const originalEmail = $(this).data('original') || '';
                const currentEmail = $(this).val();
                
                if (originalEmail && originalEmail !== currentEmail) {
                    if (!confirm('Attention: Changer l\'email peut affecter la connexion de l\'utilisateur. Continuer ?')) {
                        $(this).val(originalEmail);
                    }
                }
            });

            // Enregistrer l'email original au chargement
            $('#Email').data('original', $('#Email').val());
        });
    </script>
}

