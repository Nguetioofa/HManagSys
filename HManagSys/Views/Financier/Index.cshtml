@using HManagSys.Models.ViewModels.Finance
@model PagedViewModel<FinancierViewModel, FinancierFilters>
@{
    ViewData["Title"] = "Gestion des Financiers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3"><i class="fas fa-users"></i> Gestion des Financiers</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau Financier
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Filtrer les financiers</h6>
            <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                <i class="fas fa-filter"></i> Filtres
            </button>
        </div>
        <div class="collapse" id="filterCollapse">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Recherche</label>
                        <input type="text" name="SearchTerm" class="form-control" placeholder="Nom, contact..." value="@Model.Filters.SearchTerm">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Statut</label>
                        <select name="IsActive" class="form-select">
                            <option value="" selected>Tous</option>
                            <option value="true">Actifs</option>
                            <option value="false">Inactifs</option>
                        </select>
                    </div>
                    <div class="col-md-12 mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Rechercher
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i> Réinitialiser
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste des Financiers</h6>
        </div>
        <div class="card-body">
            @if (!Model.Items.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Aucun financier trouvé.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nom</th>
                                <th>Contact</th>
                                <th>Statut</th>
                                <th>Date de création</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="fw-bold text-primary">
                                            @item.Name
                                        </a>
                                    </td>
                                    <td>@(item.ContactInfo ?? "N/A")</td>
                                    <td>
                                        <span class="@item.StatusBadge">@item.StatusText</span>
                                    </td>
                                    <td>@item.FormattedCreatedAt</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        Affichage de <span class="fw-bold">@Model.Items.Count</span> sur <span class="fw-bold">@Model.Pagination.TotalCount</span> financiers
                    </div>
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            @if (Model.Pagination.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="1" asp-route-searchTerm="@Model.Filters.SearchTerm" asp-route-isActive="@Model.Filters.IsActive">
                                        <i class="fas fa-angle-double-left"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@Model.Pagination.PreviousPage" asp-route-searchTerm="@Model.Filters.SearchTerm" asp-route-isActive="@Model.Filters.IsActive">
                                        <i class="fas fa-angle-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@i" asp-route-searchTerm="@Model.Filters.SearchTerm" asp-route-isActive="@Model.Filters.IsActive">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (Model.Pagination.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@Model.Pagination.NextPage" asp-route-searchTerm="@Model.Filters.SearchTerm" asp-route-isActive="@Model.Filters.IsActive">
                                        <i class="fas fa-angle-right"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@Model.Pagination.TotalPages" asp-route-searchTerm="@Model.Filters.SearchTerm" asp-route-isActive="@Model.Filters.IsActive">
                                        <i class="fas fa-angle-double-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Garder la section de filtres ouverte si des filtres sont appliqués
        $(document).ready(function () {
            const hasFilters = '@(!string.IsNullOrEmpty(Model.Filters.SearchTerm) || Model.Filters.IsActive.HasValue)' === 'True';
            if (hasFilters) {
                $('#filterCollapse').addClass('show');
            }
        });
    </script>
}