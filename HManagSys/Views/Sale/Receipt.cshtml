@model HManagSys.Models.ViewModels.Sales.SaleViewModel

@{
    ViewData["Title"] = "Reçu de vente";
}

<div class="container-fluid">
    <!-- En-tête avec titre et boutons d'action -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-receipt"></i> Reçu de vente
        </h1>
        <div>
            <a asp-action="DownloadReceipt" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-download"></i> Télécharger PDF
            </a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                <i class="fas fa-info-circle"></i> Détails
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i> Liste des ventes
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 mx-auto">
            <!-- Carte du reçu avec style imprimable -->
            <div class="card shadow mb-4" id="printable-receipt">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Reçu N° @Model.SaleNumber</h6>
                    <button class="btn btn-sm btn-outline-secondary print-button" onclick="window.print()">
                        <i class="fas fa-print"></i> Imprimer
                    </button>
                </div>
                <div class="card-body">
                    <!-- En-tête du reçu -->
                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <h5 class="mb-3">@Model.HospitalCenterName</h5>
                            <div>Date: @Model.SaleDate.ToString("dd/MM/yyyy HH:mm")</div>
                            <div>Vendeur: @Model.SoldByName</div>
                        </div>
                        <div class="col-sm-6 text-sm-end">
                            <h5 class="mb-3">Client</h5>
                            <div>@(Model.PatientName ?? "Client occasionnel")</div>
                            <div>N° de vente: <strong>@Model.SaleNumber</strong></div>
                            <div>
                                Statut:
                                <span class="badge @Model.StatusBadgeClass">@Model.StatusText</span>
                            </div>
                        </div>
                    </div>

                    <!-- Tableau des articles -->
                    <div class="table-responsive mb-4">
                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-end">Quantité</th>
                                    <th class="text-end">Prix unitaire</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-bold">@item.ProductName</span><br />
                                            <small class="text-muted">@item.CategoryName</small>
                                        </td>
                                        <td class="text-end">@item.Quantity @item.UnitOfMeasure</td>
                                        <td class="text-end">@item.FormattedUnitPrice</td>
                                        <td class="text-end">@item.FormattedTotalPrice</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Sous-total:</td>
                                    <td class="text-end">@Model.TotalAmount.ToString("N0") FCFA</td>
                                </tr>
                                @if (Model.DiscountAmount > 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-end fw-bold">Remise:</td>
                                        <td class="text-end">-@Model.DiscountAmount.ToString("N0") FCFA</td>
                                    </tr>
                                }
                                <tr class="table-active">
                                    <td colspan="3" class="text-end fw-bold">Total:</td>
                                    <td class="text-end fw-bold">@Model.FinalAmount.ToString("N0") FCFA</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Paiements -->
                    <div class="row">
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <div class="mb-3">
                                    <h6 class="fw-bold">Notes:</h6>
                                    <p>@Model.Notes</p>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold">Paiements:</h6>
                            @if (!Model.Payments.Any(p => !p.IsCancelled))
                            {
                                <p class="text-danger">Aucun paiement enregistré</p>
                            }
                            else
                            {
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Méthode</th>
                                            <th class="text-end">Montant</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var payment in Model.Payments.Where(p => !p.IsCancelled))
                                        {
                                            <tr>
                                                <td>@payment.PaymentDate.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    @payment.PaymentMethodName
                                                    @if (!string.IsNullOrEmpty(payment.TransactionReference))
                                                    {
                                                        <br />
                                            
                                                        <small>Réf: @payment.TransactionReference</small>
                                                    }
                                                </td>
                                                <td class="text-end">@payment.Amount.ToString("N0") FCFA</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="2" class="text-end fw-bold">Total payé:</td>
                                            <td class="text-end">@Model.PaidAmount.ToString("N0") FCFA</td>
                                        </tr>
                                        @if (Model.RemainingAmount > 0)
                                        {
                                            <tr>
                                                <td colspan="2" class="text-end fw-bold">Reste à payer:</td>
                                                <td class="text-end text-danger">@Model.RemainingAmount.ToString("N0") FCFA</td>
                                            </tr>
                                        }
                                    </tfoot>
                                </table>
                            }
                        </div>
                    </div>

                    <!-- Pied de page du reçu -->
                    <div class="row mt-4 border-top pt-3">
                        <div class="col-md-12 text-center">
                            <p>Merci pour votre achat!</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ajouter un paiement (si solde restant) -->
            @if (Model.RemainingAmount > 0 && Model.PaymentStatus != "Cancelled")
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Ajouter un paiement</h6>
                    </div>
                    <div class="card-body">
                        <form id="paymentForm">
                            <input type="hidden" id="referenceType" value="Sale" />
                            <input type="hidden" id="referenceId" value="@Model.Id" />
                            <input type="hidden" id="patientId" value="@Model.PatientId" />

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="paymentMethod">Méthode de paiement</label>
                                    <select id="paymentMethod" class="form-control" required>
                                        <option value="">Sélectionner une méthode</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="amount">Montant</label>
                                    <div class="input-group">
                                        <input type="number" id="amount" class="form-control" required min="1" max="@Model.RemainingAmount" value="@Model.RemainingAmount" />
                                        <span class="input-group-text">FCFA</span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3" id="transactionReferenceContainer" style="display: none;">
                                <label for="transactionReference">Référence de transaction</label>
                                <input type="text" id="transactionReference" class="form-control" placeholder="Numéro de transaction Mobile Money" />
                            </div>

                            <div class="mb-3">
                                <label for="notes">Notes (optionnel)</label>
                                <textarea id="notes" class="form-control" rows="2"></textarea>
                            </div>

                            <button type="button" id="addPaymentBtn" class="btn btn-success">
                                <i class="fas fa-plus-circle"></i> Ajouter le paiement
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        @@media print {
            body *

        {
            visibility: hidden;
        }

        #printable-receipt, #printable-receipt * {
            visibility: visible;
        }

        #printable-receipt {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        .print-button {
            display: none;
        }

        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Charger les méthodes de paiement
            $.ajax({
                url: '@Url.Action("GetPaymentMethods")',
                type: 'GET',
                success: function(methods) {
                    let html = '<option value="">Sélectionner une méthode</option>';
                    methods.forEach(function(method) {
                        html += `<option value="${method.id}">${method.name}</option>`;
                    });
                    $('#paymentMethod').html(html);
                }
            });

            // Afficher/masquer le champ de référence de transaction selon la méthode de paiement
            $('#paymentMethod').on('change', function() {
                const methodName = $(this).find('option:selected').text().toLowerCase();
                if (methodName.includes('mobile') || methodName.includes('orange') || methodName.includes('mtn')) {
                    $('#transactionReferenceContainer').show();
                } else {
                    $('#transactionReferenceContainer').hide();
                    $('#transactionReference').val('');
                }
            });

            // Ajouter un paiement
            $('#addPaymentBtn').on('click', function() {
                const paymentMethodId = $('#paymentMethod').val();
                const amount = $('#amount').val();
                const transactionReference = $('#transactionReference').val();
                const notes = $('#notes').val();
                const referenceType = $('#referenceType').val();
                const referenceId = $('#referenceId').val();
                const patientId = $('#patientId').val();

                // Validation
                if (!paymentMethodId) {
                    alert('Veuillez sélectionner une méthode de paiement');
                    return;
                }

                if (!amount || amount <= 0 || amount > @Model.RemainingAmount) {
                    alert('Veuillez entrer un montant valide (entre 1 et @Model.RemainingAmount FCFA)');
                    return;
                }

                const methodName = $('#paymentMethod option:selected').text().toLowerCase();
                if ((methodName.includes('mobile') || methodName.includes('orange') || methodName.includes('mtn')) && !transactionReference) {
                    alert('Veuillez entrer une référence de transaction pour ce mode de paiement');
                    return;
                }

                // Désactiver le bouton pendant le traitement
                $('#addPaymentBtn').prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Traitement en cours...');

                // Envoyer la requête
                $.ajax({
                    url: '@Url.Action("AddPayment", "Payment")',
                    type: 'POST',
                    data: {
                        referenceType: referenceType,
                        referenceId: referenceId,
                        patientId: patientId,
                        amount: amount,
                        paymentMethodId: paymentMethodId,
                        transactionReference: transactionReference,
                        notes: notes
                    },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            // Recharger la page pour afficher le paiement ajouté
                            window.location.reload();
                        } else {
                            alert('Erreur: ' + response.message);
                            $('#addPaymentBtn').prop('disabled', false).html('<i class="fas fa-plus-circle"></i> Ajouter le paiement');
                        }
                    },
                    error: function() {
                        alert('Une erreur est survenue lors du traitement de la demande');
                        $('#addPaymentBtn').prop('disabled', false).html('<i class="fas fa-plus-circle"></i> Ajouter le paiement');
                    }
                });
            });
        });
    </script>
}